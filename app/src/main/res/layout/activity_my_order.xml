<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1B1B1"
    tools:context=".activity.CheckOutActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#2638CD">
                <TextView
                    android:id="@+id/Comfirm_myorder"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:padding="10dp"
                    android:textColor="@color/whitee"
                    android:drawableStart="@drawable/icon_back"
                    android:text="Đơn hàng của tôi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_margin="5dp"
                android:layout_below="@id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/txtmyorder"
                            android:drawableStart="@drawable/search_24px"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv3"
                android:layout_below="@id/cv2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- using linear layout to store multiple view
                             inside a Horizontal Scroll View -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/white">

                            <!-- multiple button views to show a
                                  scrollable horizontal list -->
                            <Button
                                android:id="@+id/WaitMyorder"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:padding="5dp"
                                android:text="Đang chờ duyệt"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/black"/>

                            <Button
                                android:id="@+id/ApproveMyorder"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/white"
                                android:padding="4dp"
                                android:text="Đang giao"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/CancelMyorder"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:padding="4dp"
                                android:backgroundTint="@color/white"
                                android:text="Đã Hủy"
                                android:textColor="@color/black"/>

                            <Button
                                android:id="@+id/CompleteMyorder"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:padding="4dp"
                                android:backgroundTint="@color/white"
                                android:text="Đã Hoàn thành"
                                android:textColor="@color/black"/>


                        </LinearLayout>

                    </HorizontalScrollView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_Myorder"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>