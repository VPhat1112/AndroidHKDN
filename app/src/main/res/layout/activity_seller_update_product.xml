<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivitySellerAddProduct">
    <androidx.cardview.widget.CardView
        android:backgroundTint="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/Btn_Back_Update"
            android:paddingLeft="10dp"
            android:drawableStart="@drawable/icon_back"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="Cập nhât sản phẩm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Tên sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:padding="5dp"
            android:id="@+id/Edt_Update_name"
            android:layout_margin="1dp"
            android:background="@drawable/corner_edt_seller"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Hình ảnh sản phẩm "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <!-- Add images to flip through -->
        <!--        <ViewFlipper-->
        <!--            android:layout_width="100dp"-->
        <!--            android:layout_height="match_parent">-->
        <!--            <ImageView-->
        <!--                android:layout_margin="10dp"-->
        <!--                android:layout_width="100dp"-->
        <!--                android:layout_height="match_parent"-->
        <!--                android:scaleType="centerCrop"-->
        <!--                android:src="@drawable/img_1" />-->
        <!--            <ImageView-->
        <!--                android:layout_margin="10dp"-->
        <!--                android:layout_width="100dp"-->
        <!--                android:layout_height="match_parent"-->
        <!--                android:scaleType="centerCrop"-->
        <!--                android:src="@drawable/img_2" />-->
        <!--            <ImageView-->
        <!--                android:layout_margin="10dp"-->
        <!--                android:layout_width="100dp"-->
        <!--                android:layout_height="match_parent"-->
        <!--                android:scaleType="centerCrop"-->
        <!--                android:src="@drawable/img_3" />-->
        <!--        </ViewFlipper>-->
        <ImageView
            android:id="@+id/Edt_Update_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_add"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingTop="10dp"
        android:text="Danh mục sản phẩm "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Spinner
            android:id="@+id/Edt_Update_Category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingTop="10dp"
        android:text="Giá Sản Phẩm và số lượng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5">
            <EditText
                android:id="@+id/Edt_Update_price"
                android:padding="5dp"
                android:background="@drawable/corner_edt_seller"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/Edt_Update_Number"
                android:padding="5dp"
                android:background="@drawable/corner_edt_seller"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:text="Mô tả"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/Edt_Update_Decs"
            android:padding="5dp"
            android:layout_margin="1dp"
            android:background="@drawable/corner_edt_seller"
            android:gravity="top"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/Btn_Update"
        android:layout_marginTop="10dp"
        android:background="@drawable/draw_button"
        android:backgroundTint="@color/red"
        android:text="Cập nhật sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>