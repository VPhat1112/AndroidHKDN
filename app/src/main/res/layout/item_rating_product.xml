<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white"
    android:layout_margin="5dp">
    <RatingBar
        android:id="@+id/productRatingBar_rcv"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:progressTint="@color/yellow_pri"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="#AF1212"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="5"
        android:stepSize=".5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtRating_rcv"
        android:text="vô cùng hài lòng"
        android:gravity="center"
        android:textSize="12sp"
        android:padding="1dp"
        android:layout_toRightOf="@+id/productRatingBar_rcv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/productRatingBar_rcv"
        android:id="@+id/Text_Rating_pr"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <TextView
        android:layout_below="@+id/Text_Rating_pr"
        android:id="@+id/text_user_ratiing"
        android:text="Tên khách hàng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>