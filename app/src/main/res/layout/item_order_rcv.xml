<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/layoutProductShop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewproductOrder"
        app:cardCornerRadius="15dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="6"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/ImgVIewProductShopOrder"
                    android:layout_width="0dp"
                    android:layout_height="70dp"/>
                <LinearLayout
                    android:layout_weight="4"
                    android:weightSum="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:padding="20dp"
                            android:id="@+id/TxtProductNameShopOrder"
                            android:text="Tên Sản Phẩm"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:id="@+id/txtProductPriceShopOrder"
                        android:textColor="#f20"
                        android:textSize="17sp"
                        android:text="Product_price"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/SL_order"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="SL"
                            android:textSize="12dp" />
                        <TextView
                            android:id="@+id/Price_Order"
                            android:layout_alignParentEnd="true"
                            android:text="134.000 đ"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:id="@+id/edit_accept_product"
                    android:background="#FFFF"
                    android:src="@drawable/baseline_check_circle_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <ImageButton
                    android:id="@+id/edit_deni_product"
                    android:background="#FFFF"
                    android:src="@drawable/baseline_restore_from_trash_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>