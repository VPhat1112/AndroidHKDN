<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivitySellerAddProduct">
    <androidx.cardview.widget.CardView
        android:backgroundTint="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/TilrleBack"
            android:paddingLeft="10dp"
            android:drawableStart="@drawable/icon_back"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="Thêm sản phẩm mới"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Tên sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/AddNameProduct_edt"
            android:layout_margin="1dp"
            android:background="@drawable/corner_edt_seller"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Hình ảnh sản phẩm "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">
            <!-- Add images to flip through -->
<!--        <ViewFlipper-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="match_parent">-->
<!--            <ImageView-->
<!--                android:layout_margin="10dp"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:src="@drawable/img_1" />-->
<!--            <ImageView-->
<!--                android:layout_margin="10dp"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:src="@drawable/img_2" />-->
<!--            <ImageView-->
<!--                android:layout_margin="10dp"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:src="@drawable/img_3" />-->
<!--        </ViewFlipper>-->
        <ImageView
            android:id="@+id/AddImageProduct_edt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_add" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingTop="10dp"
        android:text="Danh mục sản phẩm "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Spinner
            android:layout_margin="1dp"
            android:background="@drawable/corner_edt_seller"
            android:id="@+id/spCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingTop="10dp"
        android:text="Giá Sản Phẩm và Số lượng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5">
            <EditText
                android:id="@+id/AddPriceProduct_edt"
                android:background="@drawable/corner_edt_seller"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <EditText
                android:inputType="number"
                android:layout_margin="1dp"
                android:background="@drawable/corner_edt_seller"
                android:id="@+id/NumberSell"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:text="Mô tả"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/AddDecsProduct_edt"
            android:layout_margin="1dp"
            android:background="@drawable/corner_edt_seller"
            android:gravity="top"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/SubmitAdd"
        android:layout_marginTop="10dp"
        android:background="@drawable/draw_button"
        android:backgroundTint="@color/red"
        android:text="Thêm sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>