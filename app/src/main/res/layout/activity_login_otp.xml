<!-- res/layout/activity_login.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/blue_bg">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_person_pin_24"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"/>

    <EditText
        android:id="@+id/EmailEdtLogOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="16dp"
        android:hint="Email"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#000000" />

    <TextView
        android:id="@+id/message"
        android:layout_below="@id/EmailEdtLogOTP"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <Button
        android:id="@+id/loginButtonOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0800FF"
        android:textColor="#FFFFFF"
        android:text="SendOTP" />
    <Button
        android:id="@+id/registerButtonOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButtonOTP"
        android:layout_marginTop="16dp"
        android:backgroundTint="#DD00C7"
        android:textColor="#FFFFFF"
        android:text="Register" />

</RelativeLayout>
