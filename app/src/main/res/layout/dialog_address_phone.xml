<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/crv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:background="@drawable/no_underline_edittext"
            android:layout_alignParentTop="true"
            android:id="@+id/txtdialog_thongbao"
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_height="30dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_below="@+id/crv3"
        android:layout_marginTop="10dp"
        android:id="@+id/text1"
        android:text="  Số điện thoại"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/crv1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/text1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/edt_SDT_checkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_edt_seller"
            android:drawableEnd="@drawable/icon"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/text2"
        android:text="  Địa chỉ"
        android:layout_below="@+id/crv1"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/crv2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/text2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/edt_Address_checkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_edt_seller"
            android:drawableEnd="@drawable/icon"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>