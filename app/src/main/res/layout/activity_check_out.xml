<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1B1B1"
    tools:context=".activity.CheckOutActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#2638CD">
                <TextView
                    android:id="@+id/Comfirm_order"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:padding="10dp"
                    android:textColor="@color/whitee"
                    android:drawableStart="@drawable/icon_back"
                    android:text="Xác nhận đơn hàng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_below="@id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtTenandSDT"
                            android:drawableStart="@drawable/baseline_location_on_24"
                            android:text="Tên User | SDT"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/Update_Address_order"
                            android:paddingStart="25dp"
                            android:text="Điạ chỉ"
                            android:drawableEnd="@drawable/baseline_navigate_next_24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv3"
                android:layout_below="@id/cv2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Chọn hình thức thanh toán"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:gravity="center"
                        android:text="Giao Tiết Kiệm"
                        android:checked="true"
                        android:layout_margin="20dp"
                        android:background="@drawable/corner_edt_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Giao Tiết Kiệm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                            <TextView
                                android:id="@+id/txtCost_Ship"
                                android:text="42000 đ"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rcv_Order"
                                android:padding="10dp"
                                android:layout_below="@id/txtCost_Ship"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/iconVou"
                                android:drawableStart="@drawable/promocode"
                                android:scaleType="fitXY"
                                android:layout_below="@+id/rcv_Order"
                                android:layout_alignParentStart="true"
                                android:paddingStart="5dp"
                                android:text="  Shop khuyến mãi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:drawableEnd="@drawable/baseline_navigate_next_24"
                                android:text="Nhập hoặc chọn mã"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/rcv_Order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv4"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:padding="5dp"
                        android:text="Phương thức thanh toán"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtSeall"
                        android:padding="5dp"
                        android:layout_alignParentEnd="true"
                        android:text="Xem tất cả "
                        android:textColor="#3811E4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <CheckBox
                        android:id="@+id/txtWayPay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtSeall"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/corner_edt_seller"
                        android:checked="true"
                        android:drawableStart="@drawable/money"
                        android:text="   Thanh toán bằng tiền mặt" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_below="@id/cv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtTamTinh"
                        android:scaleType="fitXY"
                        android:layout_alignParentStart="true"
                        android:padding="5dp"
                        android:text="  Tạm tính"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtMoneyFast"
                        android:text="Số tiền tổng hàng "
                        android:layout_alignParentEnd="true"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtPhi"
                        android:layout_below="@+id/txtTamTinh"
                        android:scaleType="fitXY"
                        android:layout_alignParentStart="true"
                        android:padding="5dp"
                        android:text="  Phí vận chuyển"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtMoneyShip"
                        android:padding="5dp"
                        android:layout_below="@+id/txtTamTinh"
                        android:text="Số tiền vận chuyển "
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/viewFix"
                        android:background="#8A8888"
                        android:layout_below="@+id/txtPhi"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="1dp"/>
                    <TextView
                        android:layout_below="@+id/viewFix"
                        android:scaleType="fitXY"
                        android:layout_alignParentStart="true"
                        android:padding="5dp"
                        android:text="  Tổng Thể"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtMoneyTotal"
                        android:layout_below="@+id/viewFix"
                        android:text="Số tiền vận chuyển "
                        android:padding="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableStart="@drawable/promocode"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:paddingStart="5dp"
                android:text="  Shop khuyến mãi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ChooseVoucher"
                android:drawableEnd="@drawable/baseline_navigate_next_24"
                android:text="Nhập hoặc chọn mã"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_below="@+id/ChooseVoucher"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtTT"
                        android:text="Tổng Tiền"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/CheckMoneyTotal"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:text="Số tiền tổng"
                        android:layout_below="@+id/txtTT"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/btn_Order_complete"
                        android:backgroundTint="#FF0000"
                        android:layout_alignParentEnd="true"
                        android:text="Đặt hàng"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>